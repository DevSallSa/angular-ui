{
  "name": "core-components-angular-lib",
  "version": "0.1.6",
  "scripts": {
    "ng": "ng",
    "start": "npm run storybook",
    "clean": "rimraf dist",
    "build": "npm run clean && ng build core-components-angular-lib && npm run bundle-styles",
    "build:watch": "npm run clean && ng build --watch",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "docs:json": "compodoc -p ./tsconfig.json -e json -d .",
    "storybook": "npm run docs:json && start-storybook -p 6006",
    "storybook:dev": "wait-on dist/core-components-angular-lib/global.scss && npm run storybook",
    "build-storybook": "npm run build && npm run docs:json && build-storybook",
    "bundle-styles": "scss-bundle -c scss-bundle.config.json",
    "bundle-styles:watch": "scss-bundle --watch -c scss-bundle.config.json",
    "bundle-styles:watch:dev": "wait-on dist/core-components-angular-lib && scss-bundle -c scss-bundle.config.json && npm run bundle-styles:watch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "@ngxs/devtools-plugin": "^3.7.3",
    "@ngxs/logger-plugin": "^3.7.3",
    "@ngxs/store": "^3.7.3",
    "@villemontreal/boite-outils4-web": "^4.17.0",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@angular-devkit/build-angular": "~13.1.2",
    "@angular/cli": "~13.1.2",
    "@angular/cdk": "^13.1.1",
    "@angular/compiler-cli": "~13.1.0",
    "@angular/elements": "^13.1.1",
    "@babel/core": "^7.16.7",
    "@babel/preset-typescript": "^7.12.7",
    "@compodoc/compodoc": "^1.1.18",
    "@storybook/addon-actions": "^6.5.0-alpha.31",
    "@storybook/addon-essentials": "^6.5.0-alpha.31",
    "@storybook/addon-links": "^6.5.0-alpha.31",
    "@storybook/addon-a11y": "^6.5.0-alpha.31",
    "@storybook/angular": "^6.5.0-alpha.31",
    "@storybook/builder-webpack5": "^6.5.0-alpha.31",
    "@storybook/manager-webpack5": "^6.5.0-alpha.31",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "@webcomponents/custom-elements": "^1.5.0",
    "babel-loader": "^8.2.3",
    "jasmine-core": "~3.10.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^13.0.0",
    "codelyzer": "^6.0.0",
    "husky": "^3.1.0",
    "commitlint": "^16.1.0",
    "scss-bundle": "^3.1.2",
    "wait-on": "^6.0.0",
    "concurrently": "^7.0.0",
    "typescript": "~4.5.2"
  }
}
